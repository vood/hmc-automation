;===========================
; php.ini
; Created by your name, date
; Modified by -
;===========================


;============================
; General Settings
;============================
engine                         = On
zend.ze1_compatibility_mode    = Off
short_open_tag                 = On
asp_tags                       = Off
precision                      = 14
y2k_compliance                 = On
output_buffering               = 4096
; this is disabled because it breaks .com somehow, and our lb should do this
zlib.output_compression        = Off
implicit_flush                 = Off
serialize_precision            = 100
allow_call_time_pass_reference = Off
default_mimetype               = "text/html"
date.timezone                  = "<%= scope.lookupvar('sugareps::php_timezone') %>"

;============================
; Security
;============================
[Safe Mode]
safe_mode                    = Off
safe_mode_gid                = Off
safe_mode_include_dir        =
safe_mode_exec_dir           =
safe_mode_allowed_env_vars   = PHP_
safe_mode_protected_env_vars = LD_LIBRARY_PATH
;open_basedir                 = "/var/www/html;/tmp"

[Disable]
disable_functions =
disable_classes   =

[Expose]
expose_php        = Off

[Variable Handling]
variables_order      = "EGPCS"
register_globals     = Off
register_argc_argv   = Off
auto_globals_jit     = On
magic_quotes_gpc     = Off
magic_quotes_runtime = Off
magic_quotes_sybase  = Off

[Uploads and Downloads]
enable_dl       = On
file_uploads    = On
allow_url_fopen = On

[Misc]
define_syslog_variables = Off
SMTP                    = localhost
smtp_port               = 25

[Database]
sql.safe_mode     = Off

tidy.clean_output = Off

;============================
; Resource Limits and Timeouts
;============================

max_execution_time      = <%= scope.lookupvar('sugareps::php_max_execution_time') %>
max_input_time          = <%= scope.lookupvar('sugareps::php_max_input_time') %>
max_input_vars          = <%= scope.lookupvar('sugareps::php_max_input_vars') %>

memory_limit		= <%= scope.lookupvar('sugareps::php_memory_limit') %>M

post_max_size           = 32M
upload_max_filesize     = 32M

default_socket_timeout  = 60

;============================
; Error Handling
;============================

error_reporting        = E_ALL & ~E_NOTICE
display_errors         = Off
display_startup_errors = Off
log_errors             = On
log_errors_max_len     = 1024
ignore_repeated_errors = Off
ignore_repeated_source = Off
report_memleaks        = On
track_errors           = Off
error_log			   = <%= scope.lookupvar('sugareps::php_error_log') %>

;============================
; Data Handling
;============================

auto_append_file  =


;============================
; Critical Paths
;============================

extension_dir = "/usr/lib64/php/modules"


;============================
; Database Settings
;============================

[ODBC]
odbc.allow_persistent = On
odbc.check_persistent = On
odbc.max_persistent   = -1
odbc.max_links        = -1
odbc.defaultlrl       = 4096
odbc.defaultbinmode   = 1

[MySQL]
mysql.allow_persistent = On
mysql.max_persistent   = -1
mysql.max_links        = -1
mysql.connect_timeout  = 60
mysql.trace_mode       = Off

[MySQLi]
mysqli.max_links = -1
mysqli.reconnect = Off

[mSQL]
msql.allow_persistent = On
msql.max_persistent   = -1
msql.max_links        = -1

[PostgresSQL]
pgsql.allow_persistent      = On
pgsql.auto_reset_persistent = Off
pgsql.max_persistent        = -1
pgsql.max_links             = -1
pgsql.ignore_notice         = 0
pgsql.log_notice            = 0

[Sybase]
sybase.allow_persistent     = On
sybase.max_persistent       = -1
sybase.max_links            = -1
sybase.min_error_severity   = 10
sybase.min_message_severity = 10
sybase.compatability_mode   = Off

[Sybase-CT]
sybct.allow_persistent    = On
sybct.max_persistent      = -1
sybct.max_links           = -1
sybct.min_server_severity = 10
sybct.min_client_severity = 10

[MSSQL]
mssql.allow_persistent     = On
mssql.max_persistent       = -1
mssql.max_links            = -1
mssql.min_error_severity   = 10
mssql.min_message_severity = 10
mssql.compatability_mode   = Off
mssql.secure_connection    = Off

[bcmath]
bcmath.scale               = 0


;============================
; Session
;============================

[General]
session.use_cookies       = 1
session.use_only_cookies  = 0
session.name              = PHPSESSID
session.auto_start        = 0
session.cookie_lifetime   = 0
session.cookie_path       = /
session.cookie_domain     =
session.serialize_handler = php

[Garbage Collection]
session.gc_probability = 1
session.gc_divisor     = 1000
session.gc_maxlifetime = 7200

[Bug Compatibility]
session.bug_compat_42   = 0
session.bug_compat_warn = 1

[Cache and Hash]
session.referer_check           =
session.entropy_length          = 0
session.entropy_file            =
session.cache_limiter           = nocache
session.cache_expire            = 180
session.use_trans_sid           = 0
session.hash_function           = 0
session.hash_bits_per_character = 5

url_rewriter.tags               = "a=href,area=href,frame=src,input=src,form=fakeentry"


;============================
; SOAP
;============================

soap.wsdl_cache_enabled = 1
soap.wsdl_cache_dir     = "/tmp"
soap.wsdl_cache_ttl     = 86400
zend_optimizer.enable_loader=0